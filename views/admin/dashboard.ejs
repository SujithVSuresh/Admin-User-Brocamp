  <script>
  
    
    $(document).ready(function () {
      // Function to fetch and update data list
      function updateDataList() {
        $.ajax({
          type: "GET",
          url: "/admin/dashboard/fetch-all-users", // URL to fetch data from
          success: function (dataList) {
            console.log("ui", dataList)
            $("#card-container").empty(); // Clear previous data
            // Append each item in the data list to the unordered list
            $.each(dataList, function (index, data) {
      
              $("#card-container").append(
                '<div style="border-radius: 20px; border-style: solid; border-width: 0.5px; border-color: gray; padding: 10px; display: flex;">' +
        '<div style="background-color: gray; width:100px; height: 100px; border-radius: 180px;">' +
            '<img src="/static/images/' + data.image + '" width="100px" height="100px" style="border-radius: 180px;"/>' +
        '</div>' +
        '<div style="margin-left: 10px;">' +
            '<div>' +
                '<h6 style="font-weight: bold">' + data.name + '</h6>' +
                '<h6>' + data.email + '</h6>' +
                '<h6>' + data.mobile + '</h6>' +
            '</div>' +
            '<div>' +
                '<a class="btn btn-outline-primary" href="dashboard/edit-user?id=' + data._id + '">Edit</a>' +
                '<a type="button" id="deleteBtn" data-user-id="' + data._id + '" class="btn btn-outline-danger mx-2 deleteBtn">Delete</a>' +
            '</div>' +
        '</div>' +
    '</div>'
              );
            });
          },
          error: function (xhr, status, error) {
            console.error(xhr.responseText); // Log error response
            // Optionally handle error response
          },
        });
      }

      // Search data using Ajax
      $("#searchBtn").click(function () {
        const query = $("#searchInput").val(); // Get search query
        $.ajax({
          type: "GET",
          url: "/admin/dashboard/search-users", // URL to search for data
          data: { query: query }, // Pass search query as parameter
          success: function (filteredData) {
            // Update data list with filtered data
            $("#card-container").empty(); // Clear previous data
            $.each(filteredData, function (index, data) {
              $("#card-container").append(
                '<div style="border-radius: 20px; border-style: solid; border-width: 0.5px; border-color: gray; padding: 10px; display: flex;">' +
        '<div style="background-color: gray; width:100px; height: 100px; border-radius: 180px;">' +
            '<img src="/static/images/' + data.image + '" width="100px" height="100px" style="border-radius: 180px;"/>' +
        '</div>' +
        '<div style="margin-left: 10px;">' +
            '<div>' +
                '<h6 style="font-weight: bold">' + data.name + '</h6>' +
                '<h6>' + data.email + '</h6>' +
                '<h6>' + data.mobile + '</h6>' +
            '</div>' +
            '<div>' +
                '<a class="btn btn-outline-primary" href="dashboard/edit-user?id=' + data._id + '">Edit</a>' +
                '<a type="button" id="deleteBtn" data-user-id="' + data._id + '" class="btn btn-outline-danger mx-2 deleteBtn">Delete</a>' +
            '</div>' +
        '</div>' +
    '</div>'
              );
            });
          },
          error: function (xhr, status, error) {
            console.error(xhr.responseText); // Log error response
            // Optionally handle error response
          },
        });
      });
 

    

      // Fetch and update data list initially
      updateDataList();
    });

    document.addEventListener('click', function(event) {
    // Check if the clicked element has the ID "deleteBtn"
    if (event.target && event.target.id === "deleteBtn") {
        // Prevent default behavior of anchor tag (redirecting)
        event.preventDefault();

        const confirmed = window.confirm("Are you sure you want to delete this user?");

        if (confirmed) {
            // Get the user ID from the data attribute
            const userId = event.target.getAttribute('data-user-id');

            // Send a POST request to delete the user
            fetch(`dashboard/delete-user`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ userId: userId })
            })
            .then(response => {
                if (response.ok) {
                  window.location.href = '/admin/dashboard';
                    console.log("User deleted successfully");
                } else {
                    console.error('Failed to delete user');
                }
            })
            .catch(error => {
                console.error('Error:', error);
            });
        }

        // Perform your delete action here
        console.log("btn dlt");
    }
});
